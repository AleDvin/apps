Div(Class: content-wrapper){

	SetTitle(Add a new model)
	Div(Class: breadcrumb){
		LinkPage(Register of car models, registry_auto)
		Span(/).Style(margin-right: 10px; margin-left: 10px;)
		Span(Class: text-muted, Body: Add a new model)
	}
    
    Div(Class: row df f-valign){
        Div(Class: col-md-3)
        Div(Class: col-md-6){

            Div(Class: panel panel-primary){
                Div(Class: panel-heading, Body: LangRes(Add a new model))
                Form(){

                    Div(Class: list-group-item){
                        Div(Class: row df f-valign){
                            Div(Class: col-md-3 mt-sm text-right){
                                Label(For: manufacturer){
                                    Span(Body: Manufacturer)
                                }
                            }
                            Div(Class: col-md-9 mb-sm text-left){
                                Input(Class: form-control, Type: text, Name: manufacturer)
                            } 
                        }
                        Div(Class: row df f-valign){
                            Div(Class: col-md-3 mt-sm text-right){
                                Label(For: model){
                                    Span(Body: Model)
                                }
                            }
                            Div(Class: col-md-9 mb-sm text-left){
                                Input(Class: form-control, Type: text, Name: model)
                            } 
                        }
                        Div(Class: row df f-valign){
                            Div(Class: col-md-3 mt-sm text-right){
                                Label(For: characteristics){
                                    Span(Body: Characteristics)
                                }
                            }
                            Div(Class: col-md-9 mc-sm text-left){
                                Input(Class: form-control, Type: textarea, Name: characteristics)
                            } 
                        }
                    }


					Div(Class: list-group-item){
						Div(Class: row df f-valign){
							Div(Class: col-md-3 mt-sm text-right){
								Label(For: auto_photo){
									Span(Body: Car photo)
								}
							}
							Div(col-md-9 mc-sm text-left){
								ImageInput(Name: auto_photo, Width: 200, Ratio: 2/1)
							} 
						}
					}

                    Div(Class: panel-footer clearfix){
                        Div(Class: pull-right){
                            Button(Body: Back, Class: btn btn-default, Page: registry_auto)
                            Button(Body: Add, Class: btn btn-primary, Page: registry_auto, Contract: registry_auto_add)
                        }
                    }
                }

            }
        }

        Div(Class: col-md-3)
    }
}