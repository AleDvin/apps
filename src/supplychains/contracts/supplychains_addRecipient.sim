contract supplychains_addRecipient 
{
	data 
	{
	    vID int
	    name string
		coords_address string
		area int
	}
	
	conditions 
	{
	}
	
	action 
	{
	    if ($vID == 0)
	    {
			$role_id = Roles_Create("role_name,role_type", $name, 1)
		    DBInsert("supplychains_recipients", "name,address,area,delete,role_id", $name, $coords_address, $area, 0, $role_id)
	    }
	    else
	    {
	        DBUpdate("supplychains_recipients",$vID,"name,address,area", $name, $coords_address, $area)  
	    }
	}
}