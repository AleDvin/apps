contract supplychains_addTransport
{
	data 
	{
	    vID int
	    name string
		type_company int
	}
	
	conditions 
	{
	}
	
	action 
	{
	    if ($vID == 0)
	    {
	        $role_id = Roles_Create("role_name,role_type", $name, 1)
		    DBInsert("supplychains_transport", "name,type,delete,role_id", $name, $type_company, 0, $role_id)
	    }
	    else
	    {
	        DBUpdate("supplychains_transport",$vID,"name,type", $name, $type_company)
	    }
	}
}