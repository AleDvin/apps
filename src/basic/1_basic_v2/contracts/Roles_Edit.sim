contract Roles_Edit {
    data {
        rid int
        role_name string
        role_type int
        rids string "optional"
    }

    conditions {
        Roles_CheckAccess("rid", $rid)
    }

    action {
        DBUpdate("roles", $rid, "role_name,role_type,roles_access", $role_name, $role_type, $rids)
        $result = $rid
    }
}