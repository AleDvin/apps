                                        Button(Contract: land_registry_SecondRequest_Role3, Body: $send_request$, Params: "LandId=#LandId#", Class: btn btn-default, Page: #land_registry_view#, PageParams: "notific_val_int=#LandId#").Alert($ask_request_second$, $confirm$, $cancel$)
