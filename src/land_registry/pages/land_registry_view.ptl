                                        Image(Src: "#me_avatar#", Alt: avatar, Class: img-thumbnail img-circle).Style(width:40px;)
                                        Span(#me_member_name#).Style(margin:0 10px 0 10px)
                                        
                                        Button(Contract: land_registry_InititiatePurchase, Body: $buy$, Params: "LandId=#LandId#", Class: btn btn-primary,Page: #land_registry_view#, PageParams: "notific_val_int=#LandId#").Alert($ask_initiate_land_purchase$, $confirm$, $cancel$)
