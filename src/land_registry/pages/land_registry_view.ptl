                                                Button(Contract: land_registry_PurchaseAccept, Params: "land_id=#LandId#, notific_id=#notific_id#", Body: $accept$, Class: btn btn-success, Page: land_registry_records).Alert($ask_accept_purchase$, $confirm$, $cancel$)
                                            }
                                        }
