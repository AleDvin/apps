contract hackaton_StoreDescription {
    data {
        Type string
        Description string
        Id string
    }
    
    conditions {
        if Int($Id) > 0{
            // ok
        }else{
            warning Sprintf("wrong id (%v)", $Id)
        }
    }
    action {
        if $Type == "bug"{
            DBUpdate("hackaton_bugs", Int($Id), "description", $Description)
        }
    }
}