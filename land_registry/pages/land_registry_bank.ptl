    If(GetVar(bank_role_member_id)){
        DBFind(Name: members, Source: src_member).Where("member_id=#bank_role_member_id#").Vars(bank)
    }.Else{
        DBFind(Name: members, Source: src_member).WhereId(1).Vars(bank)
