}.Else{
    DBFind(Name: #registry#_ownership, Source: src_step1).Where("step=1").Vars(step1)
    
    If(GetVar(step1_lend_object_id)){
        SetVar(Name: LandId, Value: #step1_lend_object_id#)
    }.Else{
        SetVar(Name: LandId, Value: 0)
    }
}
